<main>
    <section class="tarefas">
        {{#each tarefas}}
        <div class="tarefa">
            <form action="">
                <div>
                    <input type="checkbox" id="{{this.id}}">
                    <label for="{{this.id}}">{{this.descricao}}</label>
                </div>

                <button>
                    <img src="/imagens/x-icon.png" alt="icone de X para excluir uma tarefa">
                </button>
            </form>
        </div>
        {{/each}}
        <div class="informacoes">
            <p>5 tarefas ativas</p>

            <div class="botoes">
                <a href="" class="active">Todos</a>
                <a href="">Ativas</a>
                <a href="">Completas</a>
            </div>

            <a href="">Limpar tarefas</a>
        </div>
    </section>

    <section class="botoes">
        <a href="" class="active">Todos</a>
        <a href="">Ativas</a>
        <a href="">Completas</a>
    </section>
</main>